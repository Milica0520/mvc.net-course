@model OnlineVideoRentalStore.Models.ViewModels.MovieDetailsVM


<div class="card" style="width: 18rem;">
    <img src="poster.jpg" class="card-img-top" alt="Movie Poster">
    <div class="card-body">
        <h5 class="card-title">Movie Title: @Model.Title</h5>
        <p class="card-text"><strong>Genre:</strong> @Model.Genre</p>
        <p class="card-text"><strong>Language:</strong> @Model.Language</p>
        <p class="card-text"><strong>Release Date:</strong> @Model.ReleaseDate.ToString("MMMM dd, yyyy")</p>
        <p class="card-text"><strong>Age Restriction:</strong> @Model.AgeRestriction+</p>
        <p class="card-text"><strong>Length:</strong> @Model.Length.Hours @if (@Model.Length.Hours > 1) {<text>hours</text>} else {<text>hour</text>} @Model.Length.Minutes minutes</p>
        <p class="card-text"><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>
        <a href="@Url.Action("Rent", "Movies", new { id = Model.Id })" class="btn btn-primary">Rent Movie</a>
    </div>
</div>

